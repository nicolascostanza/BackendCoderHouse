html(lang='en')
	head
		meta(charset='UTF-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		meta(name='viewport' content='width=device-width, initial-scale=1.0')
		link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")
		script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")
		title Create Product
	body
		div(class='container mt-5')
			div(class='row')
				div(class='col')
					a(href="http://localhost:8080/" class="p-2 text-primary fs-2 fw-bolder text-decoration-none border border-primary rounded") Go Back
				table(class='table mt-5')
					thead(class='table-dark')
						th Name's Product
						th Price
						th thumbnail
					tbody
						each product in data
							tr
								td(class="text-primary fs-3")= product.title
								td(class="text-primary fs-3")= `$ ${product.price}`
								td(class="img-thumbnail")
									img(src=product.thumbnail height='30px')